{
  "name": "iobroker.google-spreadsheet",
  "version": "1.0.0",
  "description": "Adapter for io broker to work with google sheets",
  "author": {
    "name": "Thomas Pohl",
    "email": "post@thomaspohl.net"
  },
  "homepage": "https://github.com/ThomasPohl/ioBroker.google-spreadsheet",
  "license": "Apache-2.0",
  "keywords": [
    "google",
    "spreadsheet",
    "ioBroker"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ThomasPohl/ioBroker.google-spreadsheet.git"
  },
  "engines": {
    "node": ">= 20"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.3.2",
    "googleapis": "^171.4.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^5.0.0",
    "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
    "@alcalzone/release-script-plugin-license": "^5.1.1",
    "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
    "@iobroker/adapter-dev": "^1.5.0",
    "@iobroker/eslint-config": "^2.2.0",
    "@iobroker/testing": "^5.2.2",
    "@tsconfig/node14": "^14.1.8",
    "@types/gapi": "^0.0.47",
    "@types/node": "^25.2.3",
    "@types/proxyquire": "^1.3.31",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.53.1",
    "nyc": "^17.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.1.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha --config test/mocharc.custom.json test/unit/**/*.ts test/unit/*.ts --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:unit && npm run test:package",
    "coverage": "nyc npm test",
    "check": "tsc --noEmit",
    "lint": "eslint -c eslint.config.mjs .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/ThomasPohl/ioBroker.google-spreadsheet/issues"
  },
  "readmeFilename": "README.md",
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js",
      "src/**/*.ts",
      "src/*.ts",
      "build/**/*.js"
    ],
    "exclude": [
      "**/*.test.js",
      "**/test/**"
    ],
    "reporter": [
      "text",
      "html"
    ]
  }
}
